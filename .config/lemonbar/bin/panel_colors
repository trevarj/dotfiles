#!/bin/sh

# Colors
WHITE="#e5e9f0"
LDIM_WHITE="#aeb3bb"
DIM_WHITE="#aeb3bb"
CYAN="#88c0d0"
RED="#bf616a"
BLUE="#81a1c1"
B_BLUE="#88c0d0"
GREEN="#a3be8c"
YELLOW="#ebcb8b"
MAGENTA="#b48ead"
BLACK="#3b4252"
GREY="#2D333F"
BLOCK_GREY="#2E3440"
LIGHTER_GREY="#4C566A"
LIGHT_GREY="#D8DEE9"

COLOR_DEFAULT_FG="$WHITE"
COLOR_DEFAULT_BG="$BLACK"
COLOR_MONITOR_FG="$WHITE"
COLOR_MONITOR_BG="$BLACK"
COLOR_FOCUSED_MONITOR_FG="$WHITE"
COLOR_FOCUSED_MONITOR_BG="$GREY"

WS_FOCUSED_FG="$GREEN"
WS_FOCUSED_BG="$GREY"

# FREE WORKSPACE
COLOR_FREE_FG="$DIM_WHITE"
COLOR_FREE_BG="$BLACK"
COLOR_FOCUSED_FREE_FG="$LDIM_WHITE"
COLOR_FOCUSED_FREE_BG="$WS_FOCUSED_BG"

# OCCUPIED WORKSPACE
COLOR_OCCUPIED_FG="$YELLOW"
COLOR_OCCUPIED_BG="$BLACK"
COLOR_FOCUSED_OCCUPIED_FG="$WS_FOCUSED_FG"
COLOR_FOCUSED_OCCUPIED_BG="$WS_FOCUSED_BG"

# URGENT WORKSPACE
COLOR_URGENT_FG="$RED"
COLOR_URGENT_BG="$GREY"
COLOR_FOCUSED_URGENT_FG="$RED"
COLOR_FOCUSED_URGENT_BG="$LIGHT_GREY"

# BLOCK COLORS

COLOR_STATE_FG="$GREEN"
COLOR_STATE_BG="$BLACK"

COLOR_TITLE_FG="$WHITE"
COLOR_TITLE_BG="$BLACK"

COLOR_BLOCK="$BLACK"

COLOR_SYS="$YELLOW"

COLOR_NET="$GREEN"
COLOR_N_NET="$RED"

COLOR_VOL="$CYAN"
COLOR_N_VOL="$RED"

COLOR_MEM="$YELLOW"

COLOR_CPU="$MAGENTA"

COLOR_PLAYER_PAUSED="$DIM_WHITE"
COLOR_PLAYER_PLAY="$CYAN"
COLOR_PLAYER_NONE="$LIGHTER_GREY"

COLOR_TRAY="$BLACK"
