{
  "layer": "top",
  "height": 30,
  "spacing": 4,
  "modules-left": [
    "niri/workspaces",
    "custom/crypto",
  ],
  "modules-center": [
    "clock",
    "custom/weather"
  ],
  "modules-right": [
    "tray",
    "custom/notifications",
    "niri/language",
    "custom/headset",
    "pulseaudio",
    "network",
    "battery",
    "custom/power"
  ],
  "niri/workspaces": {
    "format": "{icon}",
    "format-icons": {
      // "browser": "Ôíà",
      // "emacs": "Óò≤",
      // "chat": "ÔãÜ",
      "active": "ÓÇ∂‚ñà‚ñà‚ñà‚ñà‚ñà‚ñà‚ñàÓÇ¥",
      "default": "ÔÑë"
    },
    "disable-click": false,
    "disable-markup": false,
    "current-only": false,
    "on-scroll-up": "niri msg action focus-workspace-up",
    "on-scroll-down": "niri msg action focus-workspace-down"
  },
  "niri/window": {
    "format": "{}",
    "rewrite": {
      "(.*) - Brave": "üåé $1",
      "(.*) - zsh": "Óûï [$1]",
      "(.*) - Emacs": "Óò≤ [$1]",
    },
    "icon": true,
    "icon-size": 24
  },
  "niri/language": {
    "format-en": "en",
    "format-ru": "ru"
  },
  "keyboard-state": {
    "numlock": false,
    "capslock": true,
    "format": "{icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": ""
    }
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞"
    }
  },
  "tray": {
    "spacing": 10
  },
  "clock": {
    "format": "{:%A, %b %d  %H:%M}",
    "tooltip-format": "{tz_list}<tt>{calendar}</tt>",
    "format-alt": "{:%Y-%m-%d}",
    "timezones": [
      "Europe/Moscow",
      "America/New_York",
      "Etc/UTC",
      "Asia/Hong_Kong"
    ],
    "calendar": {
      "mode"          : "month",
      "mode-mon-col": 3,
      "weeks-pos"     : "right",
      "on-scroll"     : 1,
      "format": {
        "months":     "<span color='#ffead3'><b>{}</b></span>",
        "days":       "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
        "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions":  {
      "on-click-right": "mode",
      "on-scroll-up": "tz_up",
      "on-scroll-down": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  "cpu": {
    "format": "{usage}% Ôãõ",
    "tooltip": false
  },
  "memory": {
    "format": "{}% ÔÉâ"
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": [
      "Ôù´",
      "Ôãâ",
      "Ôù©"
    ]
  },
  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": [
      "Óéç",
      "Óèì",
      "Óèë",
      "Óèè",
      "Óèé",
      "Óèç",
      "Óèä",
      "Óèà",
      "Óéõ"
    ]
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}  {capacity}%",
    "format-full": "{icon}  {capacity}%",
    "format-charging": "Û∞ÇÑ {capacity}%",
    "format-plugged": "Û±ü¢ {capacity}%",
    "format-alt": "{icon}  {time}",
    "format-icons": [
      "Û∞Å∫",
      "Û∞Åª",
      "Û∞Åº",
      "Û∞ÅΩ",
      "Û∞Åæ",
      "Û∞Åø",
      "Û∞ÇÄ",
      "Û∞ÇÅ",
      "Û∞ÇÇ",
      "Û∞Åπ",
    ]
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨"
    }
  },
  "network": {
    "format": "{icon}",
    "format-icons": {
      "wifi": [
        "Û∞§Ø",
        "Û∞§ü",
        "Û∞§¢",
        "Û∞§•",
        "Û∞§®"
      ],
      "ethernet": [
        "Û∞åó"
      ],
      "disconnected": [
        "Û∞§Æ"
      ]
    },
    "tooltip-format": "{ifname}",
    "tooltip-format-wifi": "{ifname} {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": "{ifname}",
    "tooltip-format-disconnected": "Disconnected",
    "on-click": "$HOME/.config/waybar/scripts/network.py",
    "on-click-right": "nm-connection-editor"
  },
  "pulseaudio": {
    "format": "{icon} ",
    "format-bluetooth": "{icon}Ôäî {format_source}",
    "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
    "format-muted": "Û∞ñÅ {format_source}",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "Û∞ïø",
        "Û∞ñÄ",
        "Û∞ïæ"
      ]
    },
    "on-click": "pavucontrol"
  },
  "bluetooth": {
    "format": "Û∞ÇØ",
    "format-off": "",
    "format-disabled": "",
    "format-connected": "Û∞ÇØ",
    "tooltip-format": "{controller_alias}\t{controller_address}",
    "tooltip-format-connected": "{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}, {device_battery_percentage}%",
    "on-click": "blueman-manager"
  },
  "privacy": {
    "icon-spacing": 4,
    "icon-size": 18,
    "transition-duration": 250,
    "modules": [
      {
        "type": "screenshare",
        "tooltip": true,
        "tooltip-icon-size": 24
      },
      {
        "type": "audio-out",
        "tooltip": true,
        "tooltip-icon-size": 24
      },
      {
        "type": "audio-in",
        "tooltip": true,
        "tooltip-icon-size": 24
      }
    ],
    "ignore-monitor": true,
    "ignore": [
      {
        "type": "audio-in",
        "name": "cava"
      },
      {
        "type": "screenshare",
        "name": "obs"
      }
    ]
  },
  "custom/crypto": {
    "exec": "$HOME/.config/waybar/scripts/crypto.sh -r",
    "interval": 1800,
    "format": "{}",
    "tooltip": "",
    "hide-empty-text": true
  },
  "custom/weather": {
    "exec": "$HOME/.config/waybar/scripts/weather.sh",
    "interval": 1800,
    "format": "{}",
    "tooltip": ""
  },
  "custom/headset": {
    "exec": "$HOME/.config/waybar/scripts/headsetcontrol.sh",
    "interval": 5,
    "format": "{}",
    "tooltip": "Click to configure headset",
    "hide-empty-text": true
  },
  "custom/notifications": {
    "exec": "$HOME/.config/waybar/scripts/notifications.sh status",
    "on-click": "$HOME/.config/waybar/scripts/notifications.sh toggle",
    "return-type": "json",
    "restart-interval": 1
  },
  "custom/power": {
    "format" : "Û∞ê• ",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/power_menu.xml",
    "menu-actions": {
      "shutdown": "loginctl poweroff",
      "reboot": "loginctl reboot",
      "suspend": "loginctl suspend",
    },
  },
}
