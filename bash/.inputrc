set menu-complete-display-prefix on
set show-all-if-ambiguous on
set colored-stats on
set colored-completion-prefix on
set completion-ignore-case on
set completion-map-case on
set mark-symlinked-directories on
set bell-style none
set echo-control-characters off
set page-completions off

# TAB cycles forward through completion choices
TAB: menu-complete
# Shift-TAB cycles backward through completion choices
"\e[Z": menu-complete-backward

# M-p and M-n will now intelligently complete partially completed
# commands by searching through the existing history.
"\ep": history-search-backward
"\en": history-search-forward

